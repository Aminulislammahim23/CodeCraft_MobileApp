<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/homepageFragment">

    <fragment
        android:id="@+id/homepageFragment"
        android:name="com.example.codecraft.HomepageFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.codecraft.ui.dashboard.DashboardFragment"
        android:label="Dashboard" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.codecraft.ui.profile.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.codecraft.SplashFragment">

        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.codecraft.onboarding.OnboardingFragment" />


</navigation>
