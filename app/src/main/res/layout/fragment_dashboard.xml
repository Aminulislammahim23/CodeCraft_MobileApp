<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dashboardRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="717dp"
        android:fillViewport="true"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Welcome Back!"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Keep learning and growing ðŸŒ±"
                android:textColor="#CCCCCC"
                android:textSize="15sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:id="@+id/cardCourses"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:background="@drawable/rounded_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:src="@drawable/ic_courses"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/tvCourses"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="10dp"
                        android:text="Courses"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cardFavorites"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg"
                    android:padding="16dp">

                    <ImageView
                        android:src="@drawable/ic_favorite"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/tvFavorites"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginTop="10dp"
                        android:text="Favorites"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/cardProfile"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg"
                    android:padding="16dp">

                    <ImageView
                        android:src="@drawable/ic_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:text="Profile"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp" />

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/cardSettings"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg"
                    android:padding="16dp">

                    <ImageView
                        android:src="@drawable/ic_settings"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:text="Settings"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp" />

                </LinearLayout>


            </GridLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_bg"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_home" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navCourses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconCourses"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_courses" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navFavorites"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconFavorites"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorite" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_profile" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
