<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101214">

    <!-- Scrollable Favorites List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <!-- Favorite Course Card Example 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/favCourseCard1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E1F22"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/favCourseImg1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="Course Image"
                        android:src="@android:drawable/ic_menu_slideshow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/favCourseImg1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/favCourseTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kotlin Basics"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/favCourseDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Learn the fundamentals of Kotlin"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/favCourseProgress1"
                            style="@android:style/Widget.Material.ProgressBar.Horizontal"
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#2D2F33"
                            android:indeterminate="false"
                            android:progress="50"
                            android:progressTint="#4CAF50" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Favorite Course Card Example 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/favCourseCard2"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#1E1F22"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/favCourseImg2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="Course Image"
                        android:src="@android:drawable/ic_menu_slideshow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/favCourseImg2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/favCourseTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced Android"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/favCourseDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Jetpack Compose and Architecture"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp" />

                        <ProgressBar
                            android:id="@+id/favCourseProgress2"
                            style="@android:style/Widget.Material.ProgressBar.Horizontal"
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:backgroundTint="#2D2F33"
                            android:indeterminate="false"
                            android:progress="80"
                            android:progressTint="#4CAF50" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBarFavorites"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#181A1E"
        android:padding="10dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_dialog_info"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Courses -->
        <LinearLayout
            android:id="@+id/navCourses"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_menu_slideshow"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Courses"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Favorites -->
        <LinearLayout
            android:id="@+id/navFavorites"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/btn_star"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Favorites"
                android:textColor="#4CAF50"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@android:drawable/ic_menu_myplaces"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
