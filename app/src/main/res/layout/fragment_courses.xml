<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">

    <!-- Scrollable Courses List -->
    <ScrollView
        android:id="@+id/coursesScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="80dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Courses"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:paddingBottom="16dp"/>

            <!-- Course Card 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1E1F22">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:backgroundTint="@color/cardview_light_background">

                    <ImageView
                        android:id="@+id/courseImg1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/course_img1"
                        android:contentDescription="Course Image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/courseImg1"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/courseTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kotlin for Beginners"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/courseDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn Kotlin basics step by step"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <ProgressBar
                            style="@android:style/Widget.Material.ProgressBar.Horizontal"
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:progress="40"
                            android:progressTint="#4CAF50"
                            android:backgroundTint="#2D2F33"
                            android:indeterminate="false"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!-- Course Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:backgroundTint="#1E1F22">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/courseImg2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/course_img2"
                        android:contentDescription="Course Image" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/courseImg2"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/courseTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced Android"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/courseDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep dive into Jetpack Compose"
                            android:textColor="#AAAAAA"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                        <ProgressBar
                            style="@android:style/Widget.Material.ProgressBar.Horizontal"
                            android:layout_width="120dp"
                            android:layout_height="6dp"
                            android:layout_marginTop="8dp"
                            android:progress="70"
                            android:progressTint="#4CAF50"
                            android:backgroundTint="#2D2F33"
                            android:indeterminate="false"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomBarCourses"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#181A1E"
        android:padding="10dp">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_home"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Home"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Courses -->
        <LinearLayout
            android:id="@+id/navCourses"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_courses"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Courses"
                android:textColor="#4CAF50"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Favorites -->
        <LinearLayout
            android:id="@+id/navFavorites"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Favorites"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
